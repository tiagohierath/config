" --- Essencial para o Vim e gerenciamento de plugins ---
set nocompatible              " Be iMproved, required
filetype plugin indent on     " Required for Vimwiki and other plugins
syntax on                     " Enable syntax highlighting
set relativenumber
set number
set ruler
set spelllang=pt_br
" --- Configuração do Vim-Plug ---
call plug#begin('~/.vim/plugged')
Plug 'vimwiki/vimwiki'
call plug#end()

" --- Configurações ESPECÍFICAS do Vimwiki para Markdown (.md) ---
let g:vimwiki_global_ext = 0 " Desativa extensões automáticas para todos os wikis se você tiver múltiplos
let g:vimwiki_list = [{
    \ 'path': '/home/tiagohierath/wiki/',
    \ 'syntax': 'markdown',
    \ 'ext': '.md'
    \ }]

set wrap
set linebreak
set noswapfile


" Para Vim-plug
call plug#begin('~/.vim/plugged') " Ou o caminho onde seus plugins serão instalados
Plug 'junegunn/fzf', { 'dir': '~/.fzf', 'do': './install --all' }
Plug 'junegunn/fzf.vim'
Plug 'kaarmu/typst.vim', {'for': 'typst'}
call plug#end()

" Mapeamento para abrir arquivos
nnoremap <C-p> :Files<CR>

" Mapeamento para alternar entre buffers
nnoremap <Leader>b :Buffers<CR>

" Mapeamento para buscar linhas no buffer atual
nnoremap <Leader>l :BLines<CR>
 
